        tools:layout_editor_absoluteY="26dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="117dp"
            android:layout_height="135dp"
            android:layout_marginTop="-147dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
